<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" xmlns:local="clr-namespace:SimPatient" x:Class="SimPatient.MainWindow"
        Title="Sim Patient" Height="546" MinHeight="546" Width="786" MinWidth="786" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
	
	<DockPanel Name="dockPanel">
		<Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top" Margin="0,0,-2,0">
			<MenuItem Name="mnuFile" Header="File">
				<MenuItem Header="Logout"/>
			</MenuItem>
			<MenuItem Name="mnuEditors" Header="Editors">
				<MenuItem Header="Simulation Editor"/>
				<MenuItem Header="Account Editor"/>
				<MenuItem Name="mnuPatientEditor" Header="Patient Editor" Click="mnuPatientEditor_Click"/>
				<MenuItem Header="Medication Editor"/>
			</MenuItem>
			<MenuItem Name="mnuPreferences" Header="Preferences" Click="mnuPreferences_Click"/>
		</Menu>
        <Grid Name="bottomGrid" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
