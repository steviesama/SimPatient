<Window
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" xmlns:local="clr-namespace:SimPatient" x:Class="SimPatient.MainWindow"
		Title="Sim Patient" Height="600" MinHeight="600" Width="900" MinWidth="900" WindowStartupLocation="CenterScreen"
		Loaded="Window_Loaded" Name="mainWindow">
	
	<DockPanel Name="dockPanel">
		<Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top" Margin="0,0,-2,0">
			<MenuItem Name="mnuFile" Header="File">
				<MenuItem Name="mnuPreferences" Header="Preferences" Click="mnuPreferences_Click"/>
				<MenuItem Name="mnuMarArchiverViewer" Header="MAR Archive Viewer" Click="mnuMarArchiverViewer_Click" IsEnabled="False"/>
				<MenuItem Name="mnuLogout" Header="Logout" Click="mnuLogout_Click"/>
			</MenuItem>
		</Menu>
		<Grid Name="bottomGrid" DockPanel.Dock="Bottom"/>
	</DockPanel>
</Window>
